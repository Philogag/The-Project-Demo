    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Browser",
            "request": "launch",
            "type": "pwa-msedge",
            "url": "http://localhost:3100",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Frontend",
            "type": "node-terminal",
            "command": "npm run dev",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend/desktop"
        },
        {
            "name": "Backend",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "backend.app_entry",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ],
    "compounds": [
        {
            "name": "Run All DevServer",
            "configurations": [
                "Backend",
                "Frontend",
                "Launch Browser"
            ]
        }
    ]
}